{
  "name": "letters-to-the-editor",
  "version": "0.0.1",
  "description": "Letters to the Editor",
  "scripts": {
    "ci": "cd frontend && npm run ci",
    "install": "npm run install:backend && npm run install:frontend",
    "install:backend": "npm --prefix backend install",
    "install:frontend": "npm --prefix frontend install",
    "postinstall:frontend": "npm --prefix frontend run build && bin/copy_assets.sh",
    "start": "npm --prefix backend start"
  }
}
